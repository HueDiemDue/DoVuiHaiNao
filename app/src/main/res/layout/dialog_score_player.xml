<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/ic_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/ic_back"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp"
        android:text="ĐIỂM CAO"
        android:layout_toRightOf="@id/imgBack"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvName1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvTitle"
        android:text="1."
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvScore1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="..........................."
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvName1"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/tvTitle" />
    <TextView
        android:id="@+id/tvName2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvName1"
        android:text="2."
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvScore2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="..........................."
        android:textColor="@color/colorPrimaryDark"
        android:layout_toRightOf="@+id/tvName2"
        android:layout_below="@id/tvScore1" />
    <TextView
        android:id="@+id/tvName3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvName2"
        android:text="3."
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvScore3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="..........................."
        android:layout_toRightOf="@+id/tvName1"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/tvScore2" />
    <TextView
        android:id="@+id/tvName4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvName3"
        android:text="4."
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"  />

    <TextView
        android:id="@+id/tvScore4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="..........................."
        android:layout_toRightOf="@+id/tvName1"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_below="@id/tvScore3" />
    <TextView
        android:id="@+id/tvName5"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvName4"
        android:text="5."
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"  />

    <TextView
        android:id="@+id/tvScore5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="..........................."
        android:layout_toRightOf="@+id/tvName1"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/tvScore4" />
</RelativeLayout>