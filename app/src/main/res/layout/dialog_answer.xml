<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ic_horizontal"
    android:padding="25dp">

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_face" />

    <TextView
        android:id="@+id/tvCmt"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="123"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvStupid"
        android:layout_below="@id/tvCmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="123"
        android:textAlignment="center"
        android:textColor="@color/colorRed" />
    <TextView
        android:id="@+id/tvNotiFail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStupid"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/colorRed" />
   <TextView
       android:id="@+id/tvScore"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="17sp"
       android:text="123"
       android:textAlignment="center"
       android:layout_below="@id/tvNotiFail"
       android:textColor="@color/colorRed"/>
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="8dp"
        android:layout_below="@+id/tvNotiFail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/tab_back" />

</RelativeLayout>